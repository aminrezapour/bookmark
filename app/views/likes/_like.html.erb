<% if policy(Like.new).create? %>

    <div>
      <% if like = current_user.liked(link) %>
        <%= link_to [link, like], class: 'btn btn-danger', method: :delete do %>
          <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
        <% end %>
      <% else %>
        <!-- link to like.new is confusing, what is it? -->
        <%= link_to [link, Like.new], class: 'btn btn-primary', method: :post do %>
          <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
        <% end %>
      <% end %>
    </div>

<% end %>
