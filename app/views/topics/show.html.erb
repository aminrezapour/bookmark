<div>
  <h1><%= @topic.title %> </h1>

  <%= link_to "Edit Topic", edit_user_topic_path(@topic.user, @topic), class: 'btn btn-success' %>
  <%= link_to "Delete Topic", [@topic.user, @topic], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>

  <div>
    <%= render @topic.links %>
  </div>

  <div>
      <h2>New Link</h2>
      <%= render 'links/form', link: Link.new, topic: @topic %>
  </div>

</div>
